    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow 
    frag = magenta 
    old = red 
    new = green 

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
	editor = vim

[diff]
